{
    "name": "learn-english-interactive",
    "version": "1.0.0",
    "description": "Interactive platform to learn English (A1-B2). Free course with Text-to-Speech, audio, and exercises. Curso completo para aprender inglés gratis con audio y pronunciación.",
    "author": "Albert Benavent Cabrera",
    "type": "module",
    "license": "GPL-3.0",
    "scripts": {
        "predev": "npx kill-port 3000 && npm run gen-tree",
        "dev": "NODE_ENV=development tsx watch --env-file=.env server/index.ts",
        "build": "npm run gen-tree && npm run build:client && npm run build:server",
        "build:client": "vite build",
        "build:server": "vite build --ssr src/App.tsx --outDir dist/server",
        "prestart": "npx kill-port 3000 && npm run gen-tree",
        "start": "NODE_ENV=production node --env-file=.env --import tsx server/index.ts",
        "gen-tree": "node --import tsx scripts/generate-tree.ts",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "ESLINT_USE_FLAT_CONFIG=false eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "format": "prettier --write ."
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ],
        "rules": {
            "@typescript-eslint/no-explicit-any": "error"
        }
    },
    "dependencies": {
        "@tailwindcss/vite": "^4.1.18",
        "@vitejs/plugin-react": "^4.3.4",
        "autoprefixer": "^10.4.20",
        "chokidar": "^5.0.0",
        "express": "^5.2.1",
        "gray-matter": "^4.0.3",
        "lucide-react": "^0.474.0",
        "marked": "^17.0.1",
        "postcss": "^8.5.1",
        "react": "^19.0.0-rc.1",
        "react-dom": "^19.0.0-rc.1",
        "sanitize-html": "^2.17.0",
        "tailwindcss": "4.1.18",
        "tsx": "^4.21.0",
        "vite": "^6.0.11"
    },
    "devDependencies": {
        "@testing-library/dom": "^10.4.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.2",
        "@types/express": "^5.0.6",
        "@types/marked": "^5.0.2",
        "@types/node": "^25.1.0",
        "@types/react": "^19.0.8",
        "@types/react-dom": "^19.0.3",
        "@types/sanitize-html": "^2.16.0",
        "@types/supertest": "^6.0.3",
        "@typescript-eslint/eslint-plugin": "^8.54.0",
        "@typescript-eslint/parser": "^8.54.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.5",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "jsdom": "^27.0.1",
        "prettier": "^3.8.1",
        "supertest": "^7.2.2",
        "typescript": "^5.7.3",
        "vitest": "^3.2.4"
    }
}
